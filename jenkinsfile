pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/garbagearchive/music_web_springboot/'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                bat './mvn spring-boot:run' 
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat './mvn test' 
            }
        }
    }
}
