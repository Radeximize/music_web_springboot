pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/garbagearchive/music_web_springboot/'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh './mvn spring-boot:run' 
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh './mvn test' // Replace with actual test command
            }
        }
    }
}
